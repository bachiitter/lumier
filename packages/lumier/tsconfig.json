{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "types": ["bun"],
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "strictNullChecks": true
  }
}
