{
  "name": "lumier",
  "version": "0.0.0",
  "description": "Infrastructure as Code toolkit for building full stack apps using Cloudflare.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "lumier": "./bin/lumier.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build:cli": "bun build ./src/cli/index.ts --outfile ./bin/lumier.js --target bun --minify",
    "build:sdk": "bun build ./src/sdk/index.ts --target node --outdir dist/ --minify && tsc --declaration --emitDeclarationOnly --outDir dist/",
    "build": "bun run build:sdk && bun run build:cli",
    "dev:cli": "bun build ./src/cli/index.ts --outfile ./bin/lumier.js --target bun --watch",
    "dev:sdk": "bun build ./src/sdk/index.ts --target node --outdir dist/ --watch",
    "dev": "bun run dev:sdk & bun run dev:cli",
    "clean": "rm -rf dist bin/lumier.js",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "dotenv": "17.2.3",
    "zod": "4.3.5"
  },
  "peerDependencies": {
    "@pulumi/cloudflare": "^6.0.0",
    "@pulumi/pulumi": "^3.0.0",
    "miniflare": "^4.0.0",
    "rolldown": "^1.0.0-beta.0"
  },
  "peerDependenciesMeta": {
    "@pulumi/cloudflare": {
      "optional": true
    },
    "@pulumi/pulumi": {
      "optional": true
    },
    "miniflare": {
      "optional": true
    },
    "rolldown": {
      "optional": true
    }
  },
  "keywords": [
    "cloudflare",
    "workers",
    "infrastructure",
    "iac",
    "cli"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.6"
  }
}
