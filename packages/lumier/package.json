{
  "name": "lumier",
  "version": "0.0.0",
  "description": "Infrastructure as Code toolkit for building full stack apps using Cloudflare.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "lumier": "./bin/lumier.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build:cli": "bun build ./src/cli/index.ts --outfile ./bin/lumier.js --external=miniflare --external=workerd --external=rolldown --external=lumier --target bun",
    "build:sdk": "bun build ./src/sdk/index.ts --target node --outdir dist/",
    "build": "bun run build:sdk && bun run build:cli && tsc -p tsconfig.build.json",
    "dev:cli": "bun build ./src/cli/index.ts --outfile ./bin/lumier.js --external=miniflare --external=workerd --external=rolldown --external=lumier --target bun --watch",
    "dev:sdk": "bun build ./src/sdk/index.ts --target node --outdir dist/sdk/ --watch",
    "dev:types": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "dev": "bun run dev:sdk & bun run dev:types & sleep 1 && bun run dev:cli",
    "clean": "rm -rf dist bin/lumier.js",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chokidar": "^5.0.0",
    "rolldown": "latest",
    "unenv": "^1.10.0",
    "zod": "4.3.5"
  },
  "peerDependencies": {
    "@pulumi/cloudflare": "latest",
    "@pulumi/pulumi": "latest",
    "miniflare": "^4.20260114.0"
  },
  "peerDependenciesMeta": {
    "@pulumi/cloudflare": {
      "optional": true
    },
    "@pulumi/pulumi": {
      "optional": true
    },
    "miniflare": {
      "optional": true
    }
  },
  "keywords": [
    "cloudflare",
    "workers",
    "infrastructure",
    "iac",
    "cli"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "typescript": "^5.8.3"
  }
}
